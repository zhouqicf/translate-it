{
    "manifest_version": 2,
	"name": "Translate It",
	"version": "0.0.1",
	"description" : "Translate the selection text with Google Translate.",
	"icons": {
        "19": "19.png",
        "24": "24.png",
        "32": "32.png",
        "48": "48.png",
        "128": "128.png"
	},
    "browser_action": {
        "default_icon": {
            "19": "19.png"
        },
        "default_title": "Select Target Language",
        "default_popup": "popup.html"
    },
	"background": {
        "scripts": [ "background.js" ]
    },
	"permissions": [ "contextMenus" ]
}